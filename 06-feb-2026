from typing import List

class Solution:
    def minRemoval(self, nums: List[int], k: int) -> int:
        n = len(nums)
        if n <= 1:
            return 0
            
        nums.sort()
        max_window_size = 0
        j = 0
        
        # For each element as the minimum
        for i in range(n):
            # Find the rightmost element that satisfies nums[j] <= nums[i] * k
            while j < n and nums[j] <= nums[i] * k:
                j += 1
            
            # The window from i to j-1 (inclusive) is valid
            # We need to remove elements outside this window
            window_size = j - i
            max_window_size = max(max_window_size, window_size)
        
        return n - max_window_size
